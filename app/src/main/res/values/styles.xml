<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TextStyle">
        <item name="android:textSize">@dimen/textsize_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle.Header" parent="TextStyle">
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle.Title" parent="TextStyle">
        <item name="android:textSize">@dimen/textsize_title</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle.Toolbar" parent="TextStyle">
        <item name="android:textSize">@dimen/textsize_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textSize">@dimen/textsize_medium_large</item>
    </style>

    <style name="TextInputFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textSize">@dimen/textsize_medium_large</item>
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
    </style>

    <style name="CurrencyInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textSize">@dimen/textsize_currency</item>
    </style>

    <style name="DetailPersonsStyle" parent="TextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/textsize_large</item>00
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/textsize_medium_large</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.125</item>
    </style>

    <!--Settings-->
    <style name="SettingsBasicStyle">
        <item name="android:textColor">@color/black_87</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/textsize_small</item>
    </style>

    <style name="SettingsOptionItemStyle">
        <item name="android:textSize">@dimen/textsize_medium_large</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="SettingsPopUpTitleStyle">
        <item name="android:textSize">@dimen/textsize_xlarge</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>
